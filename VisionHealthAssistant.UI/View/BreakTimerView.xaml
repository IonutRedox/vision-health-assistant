<UserControl x:Class="VisionHealthAssistant.UI.View.BreakTimerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helper="clr-namespace:VisionHealthAssistant.UI.Helper"
             xmlns:converters="clr-namespace:VisionHealthAssistant.UI.Converters"
             xmlns:controls="clr-namespace:VisionHealthAssistant.UI.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Style="{StaticResource PageStyle}">
    <UserControl.Resources>
        <converters:NumericTextBoxConverter x:Key="NumericTextBoxConverter"/>
    </UserControl.Resources>
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="{x:Type controls:ImageButton}" BasedOn="{StaticResource UpDownButtonStyle}"/>
        </StackPanel.Resources>
        <Label Content="Break timer" Style="{StaticResource PageTitleStyle}"/>
  
        <TextBlock Text="{Binding Info}"/>

        
        <Label Content="Break frequency" />
        <StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding BreakTimer.Frequency,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource NumericTextBoxConverter}}" Width="40" Height="20" helper:TextBoxHelper.OnlyInteger="True"  HorizontalContentAlignment="Right" />
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <controls:ImageButton Image="/Resources/Icons/UpArrow.png" Command="{Binding IncreaseFrequencyCommand}"/>
                <controls:ImageButton Image="/Resources/Icons/DownArrow.png"  Command="{Binding DecreaseFrequencyCommand}"/>
            </StackPanel>
        </StackPanel>

        <Label Content="Break length"/>
        <StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding BreakTimer.Length,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource NumericTextBoxConverter}}" Width="40" Height="20" helper:TextBoxHelper.OnlyInteger="True" HorizontalContentAlignment="Right"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <controls:ImageButton Image="/Resources/Icons/UpArrow.png" Command="{Binding IncreaseLengthCommand}"/>
                <controls:ImageButton Image="/Resources/Icons/DownArrow.png"  Command="{Binding DecreaseLengthCommand}"/>
            </StackPanel>
        </StackPanel>

        <Label Content="Break message"/>
        <TextBox Text="{Binding BreakTimer.Message}"/>

        <StackPanel Orientation="Horizontal">
            <Label Content="Play sound"/>
            <CheckBox IsChecked="{Binding BreakTimer.IsPlaySoundActive,Mode=TwoWay}" Margin="20,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Idle reset"/>
            <CheckBox IsChecked="{Binding BreakTimer.IsIdleResetActive,Mode=TwoWay}" Margin="30,0,0,0"/>
        </StackPanel>

        <Label Content="Reset when idle for"/>
        <StackPanel Orientation="Horizontal" IsEnabled="{Binding BreakTimer.IsIdleResetActive,Mode=OneWay}">
            <TextBox Text="{Binding BreakTimer.IdleResetTime,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource NumericTextBoxConverter}}" Width="40" Height="20" helper:TextBoxHelper.OnlyInteger="True" HorizontalContentAlignment="Right" />
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <controls:ImageButton Image="/Resources/Icons/UpArrow.png" Command="{Binding IncreaseIdleResetTimeCommand}"/>
                <controls:ImageButton Image="/Resources/Icons/DownArrow.png" Command="{Binding DecreaseIdleResetTimeCommand}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="20,15,0,0">
            <Button Content="Start" Command="{Binding StartCommand}" Margin="0,0,15,0"/>
            <Button Content="Pause" Command="{Binding PauseCommand}" Margin="0,0,15,0"/>
            <Button Content="End" Command="{Binding EndCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>